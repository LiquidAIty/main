{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "models": {
      "type": "object",
      "properties": {
        "primary": { "type": "string" },
        "reviewer": { "type": "string" },
        "fallback": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["primary"]
    },
    "tools": { "type": "object" },
    "routingRules": { "type": "array" },
    "safety": { "type": "object" }
  },
  "required": ["models", "tools", "safety"]
}
