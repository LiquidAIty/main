# Build the docker image with `npx nx docker-build @nx/backend`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t nx-backend`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system nx-backend && \
          adduser --system -G nx-backend nx-backend

COPY apps/backend/dist nx-backend/
COPY apps/backend/package.json nx-backend/
RUN chown -R nx-backend:nx-backend .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix nx-backend --omit=dev -f install

CMD [ "node", "nx-backend" ]
