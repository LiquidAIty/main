# LiquidAIty Environment Variables

# Neo4j Configuration
NEO4J_URI=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# TimescaleDB Configuration
TIMESCALE_URI=postgres://postgres:password@localhost:5432/timeseries
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=password

# LLM Configuration
OPENAI_API_KEY=sk-your-openai-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENROUTER_API_KEY=sk-your-openrouter-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=moonshotai/kimi-k2:free
DEFAULT_MODEL=gpt-5-nano
DEFAULT_TEMPERATURE=0.2
DEFAULT_MAX_TOKENS=2048
REQUEST_TIMEOUT_MS=20000
SOL_PRIMARY=openai

# LangGraph Configuration
LANGGRAPH_MEMORY_TYPE=memory
LANGGRAPH_TRACE_ENABLED=true
LANGGRAPH_TRACE_BACKEND=console

# Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-pro
GEMINI_VISION_MODEL=gemini-2.5-pro-vision

# MCP Configuration
MCP_BASE_URL=http://localhost:8000
MCP_API_KEY=your-mcp-api-key
USE_MCP=false

# Financial Data APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FINNHUB_API_KEY=your-finnhub-key

# News and Media APIs
NEWS_API_KEY=your-news-api-key
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Sentiment Analysis
HUGGINGFACE_API_KEY=your-huggingface-key
SENTIMENT_MODEL=ProsusAI/finbert

# Server Configuration
PORT=3000
NODE_ENV=development

# Report Generation
REPORTS_STORAGE_PATH=./public/reports
INFOGRAPHICS_STORAGE_PATH=./public/infographics

# MCP Servers to Use
# Uncomment the servers you want to use
MCP_SERVERS_ENABLED=financial-data,news-api,social-media,huggingface,python-executor

# MCP Server: financial-data
# Provides stock and forex data
# FINANCIAL_DATA_API_KEY=your-financial-data-api-key

# MCP Server: news-api
# Provides news articles from various sources
# NEWS_API_KEY=your-news-api-key

# MCP Server: social-media
# Provides social media data from Twitter, Reddit, etc.
# SOCIAL_MEDIA_API_KEY=your-social-media-api-key

# MCP Server: huggingface
# Provides access to Hugging Face models
# HUGGINGFACE_API_KEY=your-huggingface-key

# MCP Server: python-executor
# Executes Python code for data analysis
# No additional configuration needed

# MCP Server: wolfram
# Provides access to Wolfram Alpha
# WOLFRAM_APP_ID=your-wolfram-app-id

# MCP Server: youtube-transcript
# Provides YouTube video transcripts
# No additional configuration needed

# MCP Server: pdf-reader
# Extracts text from PDF files
# No additional configuration needed

# MCP Server: google-sheets
# Provides access to Google Sheets
# GOOGLE_API_KEY=your-google-api-key
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# MCP Server: brave-search
# Provides web search results
# BRAVE_SEARCH_API_KEY=your-brave-search-api-key
